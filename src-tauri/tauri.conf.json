{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lotus Routine",
  "version": "1.0.0",
  "identifier": "com.th3void.lotusroutine",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "https://accounted.th3void.com"
  },
  "app": {
    "windows": [
      {
        "title": "Lotus Routine",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "url": "https://accounted.th3void.com",
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https: http:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https: http:; style-src 'self' 'unsafe-inline' https: http:; img-src 'self' data: https: http:; font-src 'self' data: https: http:; connect-src 'self' https: http: wss: ws:;"
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "webview": {
      "additionalBrowserArgs": "--disable-web-security --disable-features=VizDisplayCompositor"
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/*"
    ],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Your Accountability Hub",
    "longDescription": "Track your progress, compete with friends, and build lasting habits",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "accounted.th3void.com",
      "hardenedRuntime": true,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": [
          "gstreamer1.0-plugins-base",
          "gstreamer1.0-plugins-good",
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-pulseaudio"
        ]
      },
      "rpm": {
        "depends": [
          "gstreamer1-plugins-base",
          "gstreamer1-plugins-good",
          "gstreamer1-plugins-bad",
          "gstreamer1-plugins-pulseaudio"
        ]
      }
    }
  }
}
